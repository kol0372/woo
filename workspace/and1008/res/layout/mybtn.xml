<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/ex3_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="38dp"
        android:text="btn1" />

    <Button
        android:id="@+id/ex3_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ex3_btn1"
        android:layout_alignBottom="@+id/ex3_btn1"
        android:layout_centerHorizontal="true"
        android:text="btn2" />

    <Button
        android:id="@+id/ex3_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ex3_btn2"
        android:layout_alignBottom="@+id/ex3_btn2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="btn3" />

    <TextView
        android:id="@+id/ex3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex3_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="ResultText"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
