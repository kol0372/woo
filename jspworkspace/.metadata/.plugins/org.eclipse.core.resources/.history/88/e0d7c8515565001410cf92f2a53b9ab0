<script>
	$(document).ready(function() {
		$(window).bind('orientationchange',function(){
			//상황에 따른 핸들링
			//응용 Ajax를 사용해서 사용자의 값을 서버로 보내고 그에 맞도록 
			//시스템을 변경해서 값을 콜백해줄 수 있따.
			if(window.orientation==0){
				$('body').css('background','coral').html('wo~~~~~~~~~~~~~~~');
			}else{
				$('body').css('background','pink').html('wo~~~~~~~~~~~~~~~');
			}
		});
	});
</script>
